                "# HacX has ... multiple restrictive solo starts.",
                "if self.solo_episode(2):",
                "    early_weapon = self.random.choice(['Tazer', 'Cryogun', 'Uzi'])",
                "    self.multiworld.early_items[self.player][early_weapon] = 1",
                "elif self.solo_episode(4):",
